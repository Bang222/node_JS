                    <th>Price</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
                <%
        //Display all rows , Object data : userData
        // all rows: user.rows , list array[...]
        userData.rows.forEach(function(row){
            //Display a row
            console.log(row);
            %>
                    <tr>
                        <td>
                            <%= row.nameproduct %>
                        </td>
